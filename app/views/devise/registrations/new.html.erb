<div id="registrations-new">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-default" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="container inner-container">
      <div class="form-inputs">
        <%= f.input :name, error: false, autofocus: true, label: false, placeholder: "Name", input_html: { class: "input-default" } %>
        <%= f.input :email, error: false, label: false, placeholder: "Email Address", input_html: { class: "input-default" } %>
        <%= f.input :password, error: false, label: false, placeholder: "Password", input_html: { class: "input-default" } %>
      </div>
      <div class="form-actions">
        <%= f.submit "Sign up", class: "button button-primary" %>
      </div>
    </div>
  <% end %>
</div>
